<?xml version="1.0" encoding="utf-8"?>
<form>

	<name>Image field layout -- Pannellum</name>
	<author>ggppdk</author>
	<creationDate>September 2020</creationDate>
	<copyright>Copyright (C) 2020 ggppdk</copyright>
	<license>GNU/GPL v2</license>
	<authorEmail>flexicontentck@gmail.com</authorEmail>
	<authorUrl>www.flexicontent.org</authorUrl>
	<version>1.0</version>
	<description>Flexicontent fields - Image field layout - Pannellum parameters</description>
	
	<fields name="attribs">
		
		<fieldset name="layout" addfieldpath="/administrator/components/com_flexicontent/elements">
			<field name="PPFX_vp_max_height" type="int" default="50" label="Max Height (%)" description="Max Height of inline viewer (as a percentage of window height). Enter a number 20 to 95" />

			<field name="PPFX_vp_max_height" type="int" default="50" label="Max Height (%)" description="Max Height of inline viewer (as a percentage of window height). Enter a number 20 to 95" />
			<field name="PPFX_vp_max_height" type="int" default="50" label="Max Height (%)" description="Max Height of inline viewer (as a percentage of window height). Enter a number 20 to 95" />

			<field name="" type="separator" default="FLEXI_PREVIEW_THUMBNAILS" level="level1" />

			<field name="" type="separator" default="FLEXI_TABLET" level="level2" />
			<field name="PPFX_thumbincatview_tablet" type="radio" default="" label="FLEXI_FIELD_THUMB_IN_CAT" description="FLEXI_FIELD_THUMB_IN_CAT_DESC" class="btn-group group-fcinfo">
				<option value="">FLEXI_USE_DESKTOP</option>
				<option value="1">FLEXI_SMALL</option>
				<option value="2">FLEXI_MEDIUM</option>
				<option value="3">FLEXI_LARGE</option>
			</field>
			<field name="PPFX_thumbinitemview_tablet" type="radio" default="" label="FLEXI_FIELD_THUMB_IN_ITEM" description="FLEXI_FIELD_THUMB_IN_ITEM_DESC" class="btn-group group-fcinfo">
				<option value="">FLEXI_USE_DESKTOP</option>
				<option value="1">FLEXI_SMALL</option>
				<option value="2">FLEXI_MEDIUM</option>
				<option value="3">FLEXI_LARGE</option>
			</field>

			<field name="" type="separator" default="FLEXI_MOBILE" level="level2" />
			<field name="PPFX_thumbincatview_mobile" type="radio" default="" label="FLEXI_FIELD_THUMB_IN_CAT" description="FLEXI_FIELD_THUMB_IN_CAT_DESC" class="btn-group group-fcinfo">
				<option value="">FLEXI_USE_DESKTOP</option>
				<option value="1">FLEXI_SMALL</option>
				<option value="2">FLEXI_MEDIUM</option>
				<option value="3">FLEXI_LARGE</option>
			</field>
			<field name="PPFX_thumbinitemview_mobile" type="radio" default="" label="FLEXI_FIELD_THUMB_IN_ITEM" description="FLEXI_FIELD_THUMB_IN_ITEM_DESC" class="btn-group group-fcinfo">
				<option value="">FLEXI_USE_DESKTOP</option>
				<option value="1">FLEXI_SMALL</option>
				<option value="2">FLEXI_MEDIUM</option>
				<option value="3">FLEXI_LARGE</option>
			</field>

		</fieldset>

	</fields>
	
</form>